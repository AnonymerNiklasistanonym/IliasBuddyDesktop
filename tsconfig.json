{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "lib": [
        "es6",
        "dom"
      ],
      "allowJs": true,
      "target": "es6"
    },
    "include": [
      "modules/**/*",
      "test/**/*",
      "js/**/*",
      "index.js",
      "main.js"
    ],
    "typedocOptions": {
      "ignoreCompilerErrors": true,
      "mode": "file",
      "out": "./docs/site/typedoc",
      "name": "Ilias Buddy Desktop",
      "readme": "./docs/DOCS_README_TYPEDOC.md",
      "verbose": true
    }
  }
