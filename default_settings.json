{
    "$schema": "./default_settings_schema.json",
    "settings": {
        "hidden": [{
                "id": "restartInfo",
                "info": "Information to check on start of this program if the program was restarted and which screen was open at that time",
                "valueDefault": {
                    "openScreen": true,
                    "screenId": "welcome"
                }
            },
            {
                "id": "windowBounds",
                "info": "The window position and width/height of the last run for the next start",
                "valueDefault": {
                    "height": 1280,
                    "width": 720,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": "minWindowBounds",
                "info": "The minimal window width/height that is allowed",
                "valueDefault": {
                    "height": 600,
                    "width": 480
                }
            },
            {
                "id": "searchFilter",
                "info": "FUTURE > TODO",
                "valueDefault": {
                    "options": [{
                            "filter": false,
                            "id": "files"
                        },
                        {
                            "filter": false,
                            "id": "posts"
                        }
                    ],
                    "query": ""
                }
            },
            {
                "id": "sort",
                "info": "FUTURE > TODO",
                "valueDefault": [{
                    "ascending": false,
                    "by": "date"
                }]
            },
            {
                "id": "savedEntries",
                "info": "FUTURE > TODO",
                "valueDefault": [{
                    "course": "Demo",
                    "date": {
                        "unix": 1544169490,
                        "humanReadable": "Friday, December 7, 2018 8:58 AM"
                    },
                    "link": "https://ilias3.uni-stuttgart.de/login.php",
                    "courseDirectory": ["Pages"],
                    "description": "This is a demo entry that links to the Login page",
                    "options": {
                        "isPost": true,
                        "isFile": false,
                        "post": {
                            "title": "Demo post that links to Login",
                            "forum": "DEMO"
                        }
                    }
                }]
            },
            {
                "id": "savedLinks",
                "info": "FUTURE > TODO",
                "valueDefault": [{
                    "name": "Link name",
                    "description": "Link description text",
                    "link": "https://ilias3.uni-stuttgart.de/login.php"
                }]
            },
            {
                "id": "githubLatestReleaseUrl",
                "info": "The latest GitHub release (api) URL",
                "valueDefault": "https://api.github.com/repos/AnonymerNiklasistanonym/IliasBuddyDesktop/releases/latest"
            }
        ],
        "modifiable": [{
                "id": "nativeTitleBar",
                "info": {
                    "description": "If activated the native implementation of the title bar will be used. Otherwise the software Windows 10 like custom title bar will be used.",
                    "name": "Native Title Bar"
                },
                "type": "toggle",
                "restart": true,
                "valueDefault": false
            },
            {
                "id": "userName",
                "info": {
                    "description": "UPDATE THIS",
                    "name": "Ilias private RSS feed user name"
                },
                "type": "text",
                "valueDefault": "UserName"
            },
            {
                "id": "userUrl",
                "info": {
                    "description": "UPDATE THIS",
                    "name": "Ilias private RSS feed user URL"
                },
                "type": "url",
                "valueDefault": "https://ilias3.uni-stuttgart.de/privfeed.php..."
            },
            {
                "id": "userPassword",
                "info": {
                    "description": "UPDATE THIS",
                    "name": "Ilias private RSS feed user password"
                },
                "type": "password",
                "valueDefault": "private RSS feed password, not the Ilias login password!"
            },
            {
                "id": "minimizeToSystemTray",
                "info": {
                    "description": "UPDATE THIS",
                    "name": "Minimize to the system tray"
                },
                "type": "toggle",
                "restart": true,
                "valueDefault": false
            },
            {
                "id": "devMode",
                "info": {
                    "description": "Activate developer tools",
                    "name": "Developer mode"
                },
                "type": "toggle",
                "valueDefault": false
            },
            {
                "id": "checkForUpdatesOnStartup",
                "info": {
                    "description": "UPDATE THIS",
                    "name": "Check for program updates on start"
                },
                "type": "toggle",
                "valueDefault": true
            },
            {
                "id": "checkForUpdatesCronJob",
                "info": {
                    "description": "Activate if on or disable if off the cron job that checks in the background for updates of this program",
                    "name": "Cron job for program updates"
                },
                "type": "toggle",
                "valueDefault": true
            },
            {
                "id": "checkForUpdatesCronJobConfiguration",
                "info": {
                    "description": "Configure in cron job semantic how often the program should check for updates in the background",
                    "name": "Cron job for program updates configuration"
                },
                "type": "cronJob",
                "valueDefault": "0 0 * * 0"
            },
            {
                "id": "checkForFeedCronJob",
                "info": {
                    "description": "Activate if on or disable if off the cron job that checks in the background for updates of your private Ilias RSS feed",
                    "name": "Cron job of private Ilias RSS feed"
                },
                "type": "toggle",
                "valueDefault": true
            },
            {
                "id": "checkForFeedCronJobConfiguration",
                "info": {
                    "description": "Configure in cron job semantic how often the program should check your feed in the background",
                    "name": "Cron job of private Ilias RSS feed configuration"
                },
                "type": "cronJob",
                "valueDefault": "*/5 * * * *"
            },
            {
                "id": "autoLaunch",
                "info": {
                    "description": "Automatically start the program in the background on start",
                    "name": "Auto launch on login"
                },
                "type": "toggle",
                "valueDefault": true
            },{
                "id": "globalShortcutShow",
                "info": {
                    "description": "Open/Hide the app with a global keyboard shortcut",
                    "name": "Keyboard shortcut 'show app'"
                },
                "type": "keyboardShortcut",
                "valueDefault": "Control+Alt+I"
            }
        ]
    },
    "version": 1
}
