{
  "name": "ilias-buddy-desktop",
  "version": "0.0.1",
  "url": "https://github.com/AnonymerNiklasistanonym/IliasBuddyDesktop",
  "description": "Ilias desktop client",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnonymerNiklasistanonym/IliasBuddyDesktop.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder . --win"
  },
  "devDependencies": {
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "hammerjs": "^2.0.8",
    "moment": "^2.22.2",
    "node-cron": "^2.0.3",
    "node-notifier": "^5.3.0",
    "xml-js": "^1.6.8"
  },
  "bugs": "https://github.com/AnonymerNiklasistanonym/ilias-buddy-desktop/issues",
  "author": {
    "name": "AnonymerNiklasistanonym",
    "url": "https://github.com/AnonymerNiklasistanonym"
  },
  "contributors": [
    {
      "name": "AnonymerNiklasistanonym",
      "url": "https://github.com/AnonymerNiklasistanonym"
    }
  ],
  "build": {
    "appId": "ilias-buddy",
    "win": {
      "icon": "images/favicon/favicon.ico"
    },
    "nsis": {
      "artifactName": "${productName}_installer_v${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "license": "LICENSE",
      "installerIcon": "./images/favicon/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/uninstall-macro.nsh"
    },
    "publish": {
      "provider": "github"
    }
  }
}
